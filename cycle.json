{
  "version": "1.0",
  "scoped_variables": [
    {
      "identifier": "stackone",
      "scope": {
        "containers": {
          "global": true
        }
      },
      "access": {
        "env_variable": true,
        "internal_api": {},
        "file": {}
      },
      "source": {
        "type": "raw",
        "details": {
          "value": "STACKONEVALUE",
          "secret": null,
          "blob": false
        }
      }
    },
    {
      "identifier": "urltype",
      "scope": {
        "containers": {
          "global": false,
          "identifiers": ["demo"]
        },
        "access": {
          "env_variable": true,
          "internal_api": {
            "duration": "15m"
          },
          "file": {
            "path": "/root",
            "decode": false
          }
        },
        "source": {
          "type": "url",
          "details": {
            "url": "https://demo.dec.chrisaubuchon.com/config"
          }
        }
      }
    }
  ],

  "containers": {
    "demo": {
      "name": "demo",
      "image": {
        "name": "simplews",
        "origin": {
          "type": "docker-file",
          "details": {
            "context_dir": "/",
            "build_file": "/Dockerfile"
          }
        }
      },
      "config": {
        "network": {
          "public": "enable",
          "hostname": "simplews",
          "ports": ["80:80"]
        },
        "deploy": {
          "instances": 1
        }
      }
    },
    "reach": {
      "name": "reach",
      "image": {
        "name": "simplews-external",
        "origin": {
          "type": "docker-file",
          "details": {
            "repo": {
              "url": "https://github.com/aubuchcl/build-dir-two.git"
            },
            "context_dir": "/",
            "build_file": "/Dockerfile"
          }
        }
      },
      "config": {
        "network": {
          "public": "enable",
          "hostname": "simplews",
          "ports": ["80:80"]
        },
        "deploy": {
          "instances": 1
        }
      }
    }
  }
}
